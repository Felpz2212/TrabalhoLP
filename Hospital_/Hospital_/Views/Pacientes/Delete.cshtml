@model Hospital_.Models.Paciente

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color:aliceblue">Deletar Pacientes</h1>

<h3 style="color:aliceblue">Tem certeza de que quer DELETAR este Paciente?</h3>
<div>
    <h4 style="color:aliceblue">Paciente</h4>
    <hr />
    <dl style="color:aliceblue" class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.idade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.sintomas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.sintomas)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para Lista</a> 
    </form>
</div>
